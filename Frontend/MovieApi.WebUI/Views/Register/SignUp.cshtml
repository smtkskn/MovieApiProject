@model CreateUserRegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Yeni Kullanıcı Kaydı</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="/colorlib-regform-31/css/roboto-font.css">
	<link rel="stylesheet" type="text/css" href="/colorlib-regform-31/fonts/font-awesome-5/css/fontawesome-all.min.css">
	<!-- Main Style Css -->
	<link rel="stylesheet" href="/colorlib-regform-31/css/style.css" />
</head>
<body class="form-v5">
	<div class="page-content">
		<div class="form-v5-content">
			<form class="form-detail" method="post">
				<h2>Movie Api Kullanıcı Kaydı</h2>
				<div class="form-row">
					<label for="full-name">Ad</label>
					<input type="text" asp-for="Name" id="full-name" class="input-text" placeholder="Ad" required>
					<i class="fas fa-user"></i>
				</div>
				<div class="form-row">
					<label for="full-name">Soyad</label>
					<input type="text" asp-for="Surname" id="full-name" class="input-text" placeholder="Soyad" required>
					<i class="fas fa-car"></i>
				</div>
				<div class="form-row">
					<label for="full-name">Kullanıcı Adı</label>
					<input type="text" asp-for="Username" id="full-name" class="input-text" placeholder="Username" required>
					<i class="fas fa-cloud"></i>
				</div>
				<div class="form-row">
					<label for="your-email">Email</label>
					<input type="text" asp-for="Email" id="your-email" class="input-text" placeholder=" Email" required>
					<i class="fas fa-envelope"></i>
				</div>
				<div class="form-row">
					<label for="password">Şifre</label>
					<input type="password" asp-for="Password" id="password" class="input-text" placeholder="Your Password" required>
					<i class="fas fa-lock"></i>
				</div>
				<div class="form-row-last">
					<input type="submit" class="register" value="Kayır Ol">
				</div>
			</form>
		</div>
	</div>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>